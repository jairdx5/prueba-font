<% for (var i = 0; i < productos.length; i++) { %>
<div class="grid-container-ta">

    <div class="grid-item-ta1">
      <img src="../../../img/<%= productos[i].imagen%>" >
    </div>

    <div class="grid-item-ta2">
      <h2><%= productos[i].nombrep%> </h2>
      <p><b>Descripcion:</b> <%=productos[i].descripcion%> </p> 
      <p><b>Fabricante</b> <%= productos[i].nombre%></p>
      <p><b>Articulo ID</b> <%= productos[i].IdProducto%></p>
      <p><b>Precio : $ </b> <%= productos[i].precio%></p>

    </div>

    <div class="grid-item-ta3">
      <h5>Configura tus productos:</h5>
      <p><b>¿Cuantos quieres? </b> Disponible de 1 a <%= productos[i].disponibles%></p>

      <div class="form-group has-search">
        <span class="fas fa-shopping-cart form-control-feedback"></span>
        <input type="text" class="form-control" placeholder="Numero de licencias" id="txtnum<%=i%>">  
    </div>

    <p id="total">total $ 0.00</p>
    <button type="button" class="btn btn-success" id="boton" >Agregar Al carrito</button>
    </div>
  </div>
  <% } %>


